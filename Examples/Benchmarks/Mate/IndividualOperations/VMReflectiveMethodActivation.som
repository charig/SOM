VMReflectiveMethodActivation = MessageSend (
    oneTimeSetup = (
    	| environment |
    	super oneTimeSetup.
    	environment := EnvironmentMO 
							operationalSemantics: nil 
							message: MethodActivationSemanticsMO new
							layout: nil.
		object installEnvironment: environment.
    )
    
    verifyResult: result = (
      ^self assert: result equals: 1
    )
)    
