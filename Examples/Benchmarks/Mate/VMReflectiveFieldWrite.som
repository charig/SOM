VMReflectiveFieldWrite = FieldWrite (
    initialize = (
    	| environment |
    	super initialize.
    	environment := EnvironmentMO 
							operationalSemantics: FieldWriteSemanticsMO new 
							message: nil 
							layout: nil.
		object installEnvironment: environment.
    )
    
    verifyResult: result = (
      ^self assert: object key equals: 1
    )
)