Rating = Object (
    | movie rating |
    
	movie = (^movie)
	movie: aMovieId = ( movie := aMovieId)
	
	rating = (^rating)
	rating: aRating = ( rating := aRating)

	----------------------------------
	movie: aMovieId rating: aRating = (
		| rating |
		rating := self new
		rating movie: aMovieId.
		rating rating: aRating  
	)
)    
